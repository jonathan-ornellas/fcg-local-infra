version: "3.9"
services:
  fcg-users-api:
    build: .
    container_name: fcg-users-api
    ports:
      - "5001:8080"
    environment:
      - ASPNETCORE_ENVIRONMENT=Development
      - ConnectionStrings__DefaultConnection=Server=fcg-users-db;Database=fcg-usersdb;User Id=sa;Password=fiap@123;TrustServerCertificate=True
      - Jwt__Issuer=fcg
      - Jwt__Audience=fcg
      - Jwt__Key=63034f05-afd0-4f63-bdfa-a48ee5e1f976
      - RabbitMQ__Host=rabbitmq
      - RabbitMQ__User=guest
      - RabbitMQ__Password=guest
      - RabbitMQ__Exchange=fcg.events
      - OpenTelemetry__OtlpEndpoint=http://jaeger:4317
    depends_on:
      fcg-users-db:
        condition: service_healthy
      rabbitmq:
        condition: service_healthy
      jaeger:
        condition: service_started

  fcg-users-db:
    image: mcr.microsoft.com/mssql/server:2022-latest
    container_name: fcg-users-db
    environment:
      - SA_PASSWORD=fiap@123
      - ACCEPT_EULA=Y
    ports:
      - "14331:1433"
    healthcheck:
      test: ["CMD-SHELL", "/opt/mssql-tools18/bin/sqlcmd -S localhost -U sa -P fiap@123 -Q 'SELECT 1' -C || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

  rabbitmq:
    image: rabbitmq:3-management
    container_name: rabbitmq
    ports:
      - "5672:5672"
      - "15672:15672"
    healthcheck:
      test: ["CMD", "rabbitmq-diagnostics", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

  jaeger:
    image: jaegertracing/all-in-one:1.57
    container_name: jaeger
    ports:
      - "16686:16686"
      - "4317:4317"

